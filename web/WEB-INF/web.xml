<?xml version="1.0" encoding="UTF-8"?>
<web-app version="4.0" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd">
    <!-- RequestServlet cho quản lý đơn nghỉ phép -->
    <servlet>
        <servlet-name>RequestServlet</servlet-name>
        <servlet-class>servlet.RequestServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoginController</servlet-name>
        <servlet-class>controller.authentication.LoginController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LogoutController</servlet-name>
        <servlet-class>controller.authentication.LogoutController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CreateLeaveRequestController</servlet-name>
        <servlet-class>controller.leaveRequest.CreateLeaveRequestController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UpdateLeaveRequestController</servlet-name>
        <servlet-class>controller.leaveRequest.UpdateLeaveRequestController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RequestServlet</servlet-name>
        <url-pattern>/request/*</url-pattern>
    </servlet-mapping>
    <!-- LogoutServlet cho đăng xuất -->
    <servlet>
        <servlet-name>LogoutServlet</servlet-name>
        <servlet-class>servlet.LogoutServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LogoutServlet</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>
    <!-- AgendaServlet cho agenda -->
    <servlet>
        <servlet-name>AgendaServlet</servlet-name>
        <servlet-class>servlet.AgendaServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AgendaServlet</servlet-name>
        <url-pattern>/agenda</url-pattern>
    </servlet-mapping>
    <!-- Trang mặc định -->
    <servlet-mapping>
        <servlet-name>LoginController</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LogoutController</servlet-name>
        <url-pattern>/logoutt</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CreateLeaveRequestController</servlet-name>
        <url-pattern>/leaverequest/create</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UpdateLeaveRequestController</servlet-name>
        <url-pattern>/leaverequest/update</url-pattern>
    </servlet-mapping>
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
</web-app>
