<?xml version="1.0" encoding="UTF-8"?>
<web-app version="4.0" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd">
    <!-- RequestServlet cho quản lý đơn nghỉ phép -->
    <servlet>
        <servlet-name>LoginController</servlet-name>
        <servlet-class>controller.authentication.LoginController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UpdateLeaveRequestController</servlet-name>
        <servlet-class>controller.leaveRequest.UpdateLeaveRequestController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CalendarController</servlet-name>
        <servlet-class>controller.calendar.CalendarController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ListLeaveRequestList</servlet-name>
        <servlet-class>view.leaverequestlist.ListLeaveRequestList</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ForgotPasswordController</servlet-name>
        <servlet-class>controller.authentication.ForgotPasswordController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LeaveApprovalController</servlet-name>
        <servlet-class>controller.leaveRequest.LeaveApprovalController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LeaveRequestController</servlet-name>
        <servlet-class>controller.leaveRequest.LeaveRequestController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LogoutController</servlet-name>
        <servlet-class>controller.authentication.LogoutController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AgendaServlet</servlet-name>
        <servlet-class>servlet.AgendaServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CreateLeaveRequestController</servlet-name>
        <servlet-class>controller.leaveRequest.CreateLeaveRequestController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AgendaServlet</servlet-name>
        <url-pattern>/agenda</url-pattern>
    </servlet-mapping>
    <!-- Trang mặc định -->
    <servlet-mapping>
        <servlet-name>LoginController</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UpdateLeaveRequestController</servlet-name>
        <url-pattern>/leaverequest/update</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CalendarController</servlet-name>
        <url-pattern>/calendar</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ListLeaveRequestList</servlet-name>
        <url-pattern>/leaverequest/list</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ForgotPasswordController</servlet-name>
        <url-pattern>/forgotpassword</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LeaveApprovalController</servlet-name>
        <url-pattern>/leaverequest/leavetoapprove</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LeaveRequestController</servlet-name>
        <url-pattern>/leaverequest/myleaves</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LogoutController</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
    <servlet-mapping>
        <servlet-name>CreateLeaveRequestController</servlet-name>
        <url-pattern>/create</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>1440</session-timeout>
    </session-config>
</web-app>
